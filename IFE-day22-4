<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>栈</title>
</head>
<body>
<script type="text/javascript">
    var arr = [43, 54, 4, -4, 84, 100, 58, 27, 140];
    var arr1 = ['apple', 'dog', 'cat', 'car', 'zoo', 'orange', 'airplane'];
    var arr2 = [[10, 14], [16, 60], [7, 44], [26, 35], [22, 63]];
    var arr3 = [
    {
        id: 1,
        name: 'candy',
        value: 40
    }, {
        id: 2,
        name: 'Simon',
        value: 50
    }, {
        id: 3,
        name: 'Tony',
        value: 45
    }, {
        id: 4,
        name: 'Annie',
        value: 60
    }
];
    //从大到小
    console.log(arr.sort((a,b) => b-a));
    //从小到大
    console.log(arr.sort((a,b) => a-b));

    //a-z
    console.log(arr1.sort());
    //z-a
    console.log(arr1.reverse());

    //第二个数从大到小的顺序进行排序输出
    console.log(arr2.sort((a,b) => b[1]-a[1]));	

    //按元素对象的value值从小到大进行排序后输出
    console.log(arr3.sort((a,b) => a.value-b.value));
</script>
</body>
</html>
