<p id="result-wrapper">现在距离 2001年1月1日星期X HH:MM:SS 还有 X 天 X 小时 X 分 X 秒</p>

<script type="text/javascript">
    
    var year,month,day,hour,minute,second,days,hours,minutes,seconds,date1,compare;

    var div = document.querySelector('div');//父元素事件委托
    daySelect = document.getElementById('day-select');//用于日的显示控制

    //获得select的选中值
    function getSelectvalue(id){
        mySelect = document.getElementById(id);  //确定当前下拉菜单
        var index = mySelect.selectedIndex;   
        //index 属性可返回下拉列表中选项的索引位置,selectedIndex代表的是你所选中项的index
        return mySelect.options[index].value;
    }

    //更新数据
    function reNew(){
    	year = getSelectvalue("year-select");
    	month = getSelectvalue("month-select");
        day = getSelectvalue("day-select");
        hour = getSelectvalue("hour-select");
        minute = getSelectvalue("minute-select");
        second = getSelectvalue("second-select");
        date1 = dateChange(); 
    }

    //合成date格式
    function dateChange(){
    	var str = year + '/' + month + '/' + day + ' ' + hour + ':' + minute + ':' + second;
    	return str;
    }

    //计算时间差
    function dateDifference(){
        var date2 = new Date();
        compare = date2.getTime() - new Date(date1).getTime();
        var date3 = Math.abs(compare) //时间差的毫秒数 , abs返回数的绝对值
        //计算出相差天数
        days = Math.floor(date3/(24*3600*1000));  
        //计算出小时数
        var leave1 = date3%(24*3600*1000);  //计算天数后剩余的毫秒数
        hours = Math.floor(leave1/(3600*1000));
        //计算相差分钟数
        var leave2 = leave1%(3600*1000);  //计算小时数后剩余的毫秒数
        minites = Math.floor(leave2/(60*1000));
        //计算相差秒数
        var leave3 = leave2%(60*1000);   //计算分钟数后剩余的毫秒数
        seconds = Math.floor(leave3/1000);
    }

    //计算星期
    function getWeek(d){
    	var weekday = new Array(7);
    	weekday[0]="星期日";
        weekday[1]="星期一";
        weekday[2]="星期二";
        weekday[3]="星期三";
        weekday[4]="星期四";
        weekday[5]="星期五";
        weekday[6]="星期六";
        return weekday[d.getDay()];
    }

    //日控制
    function selectCharge(){
        if (month==4||month==6||month==9||month==11) {
        	daySelect.options[30].style.display = 'none';
        }
        else if (month==2) {
        	if (year%4==0) {
        		daySelect.options[29].style.display = 'none';
        		daySelect.options[30].style.display = 'none';
        	}
        	else{
        		daySelect.options[28].style.display = "none";
        		daySelect.options[29].style.display = "none";
        		daySelect.options[30].style.display = "none";                             
        	}
        }
    }

    //更改文本流
    function display(){
    	var p = document.querySelector('#result-wrapper');
    	if (compare <= 0) {
    		p.innerHTML = "现在距离" + " " + year + "年" + month + "月" + day + "日" + getWeek(new Date(date1)) + " " + hour + ":" + minute + ":" + second + "还有" + days + "天" + hours + "小时" + minutes + "分钟" + seconds + "秒";
    	}
    	else{
    		p.innerHTML = "现在距离" + " " + year + "年" + month + "月" + day + "日" + getWeek(new Date(date1)) + " " + hour + ":" + minute + ":" + second + "已经过去" + days + "天" + hours + "小时" + minutes + "分钟" + seconds + "秒";
    	}
    }

    //事件
    div.onchange = function(){
    	reNew();
    	selectCharge();
    	dateDifference();
    	display();
    }
</script>
</body>
</html>
